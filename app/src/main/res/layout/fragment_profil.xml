<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/gradation">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profil"
            android:paddingLeft="30dp"
            android:layout_marginTop="15dp"
            android:textSize="19dp"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/nunito_bold"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="18dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/icons8menuverticalfilled50"/>

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/userphoto2"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/themeColor2"/>

    <TextView
        android:id="@+id/txt_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/profile_image"
        android:layout_marginTop="130dp"
        android:text="Imam Dwi Cahyo"
        android:textSize="20dp"
        android:textAlignment="center"
        android:fontFamily="@font/nunito_bold"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="273dp"
        android:layout_marginTop="242dp"
        android:src="@drawable/ic_location_on_black_24dp"
        android:scaleType="fitEnd"/>

    <Button
        android:id="@+id/btn_maps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:text="Lihat Lokasi Saya"
        android:background="@drawable/border"
        android:textAllCaps="false"
        android:drawablePadding="0dp"
        android:onClick="onClickMaps"/>


    <TextView
        android:id="@+id/txt_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_maps"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:fontFamily="@font/nunito_bold"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="30dp"
        android:text="Contact"/>

    <TextView
        android:id="@+id/txt_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_contact"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:fontFamily="@font/rubik_regular"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="30dp"
        android:text="Phone     : +62 812 2024 4608"/>

    <TextView
        android:id="@+id/txt_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_phone"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:fontFamily="@font/rubik_regular"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="30dp"
        android:text="Mail          : imamdwicahyo29@gmail.com"/>

    <TextView
        android:id="@+id/txt_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_main"
        android:layout_marginTop="100dp"
        android:textSize="16dp"
        android:fontFamily="@font/rubik_regular"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="30dp"
        android:text="Versi Aplikasi"
        android:onClick="onClickVersion"/>


</RelativeLayout>
